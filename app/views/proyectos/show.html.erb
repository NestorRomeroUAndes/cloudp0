<h1>Datos del Proyecto</h1>
<%= link_to 'Editar Poyecto', edit_proyecto_path(@proyecto) %> |
<%= link_to 'Volver al listado', proyectos_path %>
<p>
  <strong>Nombre</strong>
  <%= @proyecto.nombre %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @proyecto.descripcion %>
</p>

<p>
  <strong>Valor:</strong>
  <%= @proyecto.valor %>
</p>

<p>
  <strong>Listado de dise√±os</strong>
</p>

<table border="1">
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Email</th>
    <th>Precio</th>
    <th>Estado</th>
    <th>Imagen</th>
  </tr>

  <% @designs.each do |d| %>
    <tr>
      <td><%= d.Nombres %></td>
      <td><%= d.Apellidos %></td>
      <td><%= d.Email %></td>
      <td><%= d.Precio %></td>
      <td><%= d.Estado %></td>
      <td><%= image_tag d.Imagen.url(:cover) if !d.Imagen.url(:cover).nil?   %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @designs %>
